<div class="grid-x">
  <div class="cell small-12 medium-6 medium-offset-3 large-8 large-offset-2">
    <%= form_for @task do |f| %>
      <div class="input-group">
        <%= f.text_field :subject,
          placehoder: t('task.new.placeholder'),
          required: true,
          class: 'input-group-field',
          label: false,
          placeholder: 'Co teraz robisz?',
          id: 'query',
          autocomplete: 'off' %>
        <div class="input-group-button">
          <%= f.submit class: 'button' %>
        </div>
      </div>
    <% end %>

    <div id="suggestions">
      <table>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="grid-x">
  <div class="cell small-12 medium-6 medium-offset-3 large-8 large-offset-2">
    <table class="hover">
      <% @tasks.each do |task| %>
        <tr>
          <td>
            <%= task.subject %>
          </td>
          <td>
            <%= l task.created_at %>
          </td>
          <td>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure ?" }  %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
